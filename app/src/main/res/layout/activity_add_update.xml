<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUpdateActivity"
    tools:ignore="Deprecated">


    <TextView
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_x="15dp"
        android:layout_y="130dp"
        android:text="Номер автобуса:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/num"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="122dp"
        android:inputType="number" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_x="14dp"
        android:layout_y="173dp"
        android:text="Тип:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/type"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="168dp"
        android:inputType="text" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_x="12dp"
        android:layout_y="215dp"
        android:text="Станция:"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/station"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="214dp"
        android:inputType="text" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_x="11dp"
        android:layout_y="264dp"
        android:text="Время отправления:"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/time_start"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="262dp"
        android:inputType="text" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_x="12dp"
        android:layout_y="313dp"
        android:text="Время прибытия:"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/time_end"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="309dp"
        android:inputType="text" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_x="126dp"
        android:layout_y="507dp"
        android:text="Добавить/Обновить" />


</AbsoluteLayout>